<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueBg"
    android:orientation="vertical"
    tools:context=".Activities.CategoryActivity">

    <RelativeLayout
        android:id="@+id/categoryTopRL"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/purpleBtn">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please Choose Category to Start!"
            android:textSize="26sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

   <ScrollView
       android:scrollbars="none"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <GridLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <Button
               android:id="@+id/categoryBackHomeButton"
               android:layout_width="380dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="7dp"
               android:layout_marginTop="10dp"
               android:backgroundTint="@color/orangeBtn"
               android:text="Go Back To Home Screen"
               android:textColor="@color/white"
               android:textSize="25sp"/>
           <Button
               android:id="@+id/categoryGoScoreButton"
               android:layout_width="380dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="7dp"
               android:layout_marginTop="10dp"
               android:backgroundTint="@color/greenBtn"
               android:text="Go To Score Board!"
               android:textColor="@color/white"
               android:textSize="25sp"/>
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <RelativeLayout
                   android:layout_marginLeft="8dp"
                   android:layout_marginTop="15dp"
                   android:id="@+id/musicCat"
                   android:layout_width="180dp"
                   android:layout_height="180dp"
                   android:background="#fffff0">

                   <ImageView
                       android:layout_width="110dp"
                       android:layout_height="110dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="15dp"
                       android:src="@drawable/music_icon" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Music"
                       android:textColor="@color/black"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="125dp"
                       android:fontFamily="sans-serif-condensed-medium"
                       android:textSize="45sp"/>
               </RelativeLayout>
               <RelativeLayout
                   android:layout_marginLeft="15dp"
                   android:layout_marginTop="15dp"
                   android:id="@+id/artCat"
                   android:layout_width="180dp"
                   android:layout_height="180dp"
                   android:background="#fffff0">

                   <ImageView
                       android:layout_width="110dp"
                       android:layout_height="110dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="15dp"
                       android:src="@drawable/art_icon"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Art"
                       android:textColor="@color/black"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="125dp"
                       android:fontFamily="sans-serif-condensed-medium"
                       android:textSize="45sp"/>
               </RelativeLayout>
           </LinearLayout>
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <RelativeLayout
                   android:layout_marginLeft="8dp"
                   android:layout_marginTop="15dp"
                   android:id="@+id/scienceCat"
                   android:layout_width="180dp"
                   android:layout_height="180dp"
                   android:background="@color/category">

                   <ImageView
                       android:layout_width="110dp"
                       android:layout_height="110dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="15dp"
                       android:src="@drawable/science_icon"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Science"
                       android:textColor="@color/black"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="125dp"
                       android:fontFamily="sans-serif-condensed-medium"
                       android:textSize="43sp"/>
               </RelativeLayout>
               <RelativeLayout
                   android:layout_marginLeft="15dp"
                   android:layout_marginTop="15dp"
                   android:id="@+id/automobileCat"
                   android:layout_width="180dp"
                   android:layout_height="180dp"
                   android:background="@color/category">

                   <ImageView
                       android:layout_width="110dp"
                       android:layout_height="110dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="15dp"
                       android:src="@drawable/automobile_icon"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Automobile"
                       android:textColor="@color/black"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="125dp"
                       android:fontFamily="sans-serif-condensed-medium"
                       android:textSize="38sp"/>
               </RelativeLayout>
           </LinearLayout>
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <RelativeLayout
                   android:layout_marginLeft="8dp"
                   android:layout_marginTop="15dp"
                   android:id="@+id/technologyCat"
                   android:layout_width="180dp"
                   android:layout_height="180dp"
                   android:background="@color/category">

                   <ImageView
                       android:layout_width="110dp"
                       android:layout_height="110dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="15dp"
                       android:src="@drawable/technology_icon"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Technology"
                       android:textColor="@color/black"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="125dp"
                       android:fontFamily="sans-serif-condensed-medium"
                       android:textSize="37sp"/>
               </RelativeLayout>
               <RelativeLayout
                   android:layout_marginLeft="15dp"
                   android:layout_marginTop="15dp"
                   android:id="@+id/financeCat"
                   android:layout_width="180dp"
                   android:layout_height="180dp"
                   android:background="@color/category">

                   <ImageView
                       android:layout_width="110dp"
                       android:layout_height="110dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="15dp"
                       android:src="@drawable/finance_icon"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Finance"
                       android:textColor="@color/black"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="125dp"
                       android:fontFamily="sans-serif-condensed-medium"
                       android:textSize="38sp"/>
               </RelativeLayout>
           </LinearLayout>
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <RelativeLayout
                   android:layout_marginLeft="8dp"
                   android:layout_marginTop="15dp"
                   android:id="@+id/foodCat"
                   android:layout_width="180dp"
                   android:layout_height="180dp"
                   android:background="@color/category">

                   <ImageView
                       android:layout_width="110dp"
                       android:layout_height="110dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="15dp"
                       android:src="@drawable/food_icon"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Food"
                       android:textColor="@color/black"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="125dp"
                       android:fontFamily="sans-serif-condensed-medium"
                       android:textSize="45sp"/>
               </RelativeLayout>
               <RelativeLayout
                   android:layout_marginLeft="15dp"
                   android:layout_marginTop="15dp"
                   android:id="@+id/countriesCat"
                   android:layout_width="180dp"
                   android:layout_height="180dp"
                   android:background="@color/category">

                   <ImageView
                       android:layout_width="110dp"
                       android:layout_height="110dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="15dp"
                       android:src="@drawable/countries_icon"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Countries"
                       android:textColor="@color/black"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="125dp"
                       android:fontFamily="sans-serif-condensed-medium"
                       android:textSize="43sp"/>
               </RelativeLayout>
           </LinearLayout>
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <RelativeLayout
                   android:layout_marginLeft="8dp"
                   android:layout_marginTop="15dp"
                   android:id="@+id/historyCat"
                   android:layout_width="180dp"
                   android:layout_height="180dp"
                   android:background="@color/category">

                   <ImageView
                       android:layout_width="110dp"
                       android:layout_height="110dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="15dp"
                       android:src="@drawable/history_icon"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="History"
                       android:textColor="@color/black"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="125dp"
                       android:fontFamily="sans-serif-condensed-medium"
                       android:textSize="45sp"/>
               </RelativeLayout>
               <RelativeLayout
                   android:layout_marginLeft="15dp"
                   android:layout_marginTop="15dp"
                   android:id="@+id/languageCat"
                   android:layout_width="180dp"
                   android:layout_height="180dp"
                   android:background="@color/category">

                   <ImageView
                       android:layout_width="110dp"
                       android:layout_height="110dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="15dp"
                       android:src="@drawable/language_icon"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Language"
                       android:textColor="@color/black"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="125dp"
                       android:fontFamily="sans-serif-condensed-medium"
                       android:textSize="43sp"/>
               </RelativeLayout>
           </LinearLayout>
       </GridLayout>
   </ScrollView>
</LinearLayout>