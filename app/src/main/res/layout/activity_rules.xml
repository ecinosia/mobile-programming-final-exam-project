<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueBg"
    tools:context=".Activities.RulesActivity">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/quiz_icon"/>

        <Button
            android:id="@+id/aboutQuizBtnRules"
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/orangeBtn"
            android:text="About Quiz"
            android:textSize="70sp" />

        <Button
            android:id="@+id/quizRulesBtnRules"
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/orangeBtn"
            android:text="Quiz Rules"
            android:textColor="@color/black"
            android:textSize="70sp"/>

        <Button
            android:id="@+id/goBackHomeBtnRules"
            android:layout_width="380dp"
            android:layout_height="110dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/orangeBtn"
            android:text="Go Back to Home Screen"
            android:textColor="@color/white"
            android:textSize="31sp"/>

    </LinearLayout>

</LinearLayout>